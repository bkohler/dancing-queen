<div class="min-h-screen bg-gray-100 py-8 px-4">
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-3xl font-bold text-purple-600 mb-6 text-center">Royal Randomizer</h1>
    
    <%= link_to "Spin the Crown", root_path(spin: true), 
      class: "mb-8 w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-200 text-center" %>

    <% if @queen %>
      <div class="space-y-4">
        <div class="relative h-48 w-48 mx-auto">
          <% if @queen.image.attached? %>
            <%= image_tag @queen.image, class: "rounded-full h-full w-full object-cover border-4 border-purple-200", alt: @queen.name %>
          <% end %>
        </div>
        <h2 class="text-2xl font-semibold text-gray-800 text-center mt-4"><%= @queen.name %></h2>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500">No queens found</p>
      </div>
    <% end %>
  </div>
</div>
